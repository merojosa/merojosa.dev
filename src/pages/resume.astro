</BaseLayout>

<style>
	@media print {
		#resume-button {
			display: none;
		}

		#resume {
			gap: 0px;
		}

		* {
			font-size: 12px;
		}

		h1 {
			font-size: 18px;
		}

		h2 {
			font-size: 16px;
			padding: 0px;
		}

		h3 {
			font-size: 14px;
		}

		article {
			gap: 0px;
		}

		section {
			gap: 0px;
		}

		@page {
			margin: 0;
			size: auto;
		}

		h2 {
			border-color: black;
		}
	}
</style>

<script>
	document.getElementById('resume-button')?.addEventListener('click', printResume);

	function printResume() {
		const element = document.querySelector('#resume > article > div > p');
		if (element) {
			const textContent = element.textContent;
			const email = textContent?.replace(' [at] ', '@').replace(' [dot] ', '.');
			element.textContent = email ?? textContent;
			window.print();
			element.textContent = textContent;
		}
	}
</script>
